/* map.wxss */

/* 页面样式 */
page {
  height: 100%;
}

/* 自定义弹窗样式 */
.modal {
  position: fixed;
  bottom: 0; /* 控制弹窗位于屏幕底部 */
  left: 0;
  width: 100%;
  height: 50%;
  background-color: #fff;
  z-index: 9999;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}

.modal-content {
  padding: 20px;
}

.modal-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
  text-align: center; /* 让标题居中 */
}

.modal-footer {
  display: flex;
  flex-wrap: wrap; /* 设置弹性盒子在需要时换行 */
  justify-content: space-between; /* 两张图片之间的间距均匀分布 */
}

.modal-footer .weui-btn {
  flex: 1; /* 让按钮平分剩余空间 */
}

.location_view {
  width: calc(50% - 5px); /* 计算图片宽度，使得每行两张图片，考虑到两张图片之间的间距 */
  height: 550rpx;
  margin-bottom: 10rpx; /* 设置图片之间的垂直间距 */
}

.location_image {
  width: 100%;
  height: 100%;
}