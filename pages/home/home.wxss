/* 外层容器样式 */
.container {
  display: flex;
  flex-direction: row; /* 垂直方向排列 */
  height: 200px;
}
/*中blcok 样式 */
.m_block {
  position: relative; /* 设置中块为相对定位 */
  background-color: #f1f6f0;
  width: 100%;
  height: 200px;
  margin: 10; /* 设置中块之间的间距 */
  border-radius: 10px; /* 设置边角为 10 像素，可以根据需要调整 */
}
/*小blcok 样式 */
.s_block {
  border-radius: 10px; /* 设置边角为 10 像素，可以根据需要调整 */
  position: absolute; /* 设置小块为绝对定位 */
  display: flex; /* 使用 Flexbox 布局 */
  flex-direction: column; /* 垂直方向排列子元素 */
  align-items: center; /* 水平居中对齐子元素 */
  width: 50%; /* 设置小块的宽度 */
  height: 50%; /* 设置小块的高度 */
  background-color: #f1f6f0; /* 设置小块的背景颜色 */
}
/* 将小块定位在中块的左上角 */
.top-left {
  top: 0; /* 定位到顶部 */
  left: 0; /* 定位到左侧 */
}

/* 将小块定位在中块的右上角 */
.top-right {
  top: 0; /* 定位到顶部 */
  right: 0; /* 定位到右侧 */
}

/* 将小块定位在中块的下侧中间 */
.bottom {
  bottom: 0; /* 定位到底部 */
  left: 20%;
}

