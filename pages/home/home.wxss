/* 图片样式 */
.block_image {
  width: 100rpx;
  height: 100rpx;
}
/* 文字样式 */
.block_text {
  margin-top: 1px; /* 设置文字与图片之间的间距 */
  font-size: 12px; /* 设置文字的字体大小为 12 像素 */
}
/* block 样式 */
.block {
  display: flex;
  flex-direction: row;
  flex: 1; /* 均分宽度 */
  padding: 5px;
}

/* 左侧 block 样式 */
.block.left {
  justify-content: flex-start; /* 在水平方向上靠左对齐 */
}

/* 右侧 block 样式 */
.block.right {
  justify-content: flex-end; /* 在水平方向上靠右对齐 */
}
.view_button {
  width: 100%; /* 自适应宽度 */
  height: 100%; /* 自适应高度 */
  padding: 0; /* 去除按钮的内边距 */
  border: none; /* 去除按钮的边框 */
  background-color: transparent; /* 让按钮背景透明 */
  border-radius: 10px; /* 设置边角为 10 像素，可以根据需要调整 */
  position: absolute; /* 设置小块为绝对定位 */
  display: flex; /* 使用 Flexbox 布局 */
  flex-direction: column; /* 垂直方向排列子元素 */
  align-items: center; /* 水平居中对齐子元素 */
}
