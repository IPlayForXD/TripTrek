/* 下面是location代码，别乱动 */
.location {
  padding: 8px;
}
.location_top_text {
  font-size: 20px; /* 设置字体大小为 20 像素，您可以根据需要调整 */
}
.location_top_image {
  width: 20rpx;
  height: 20rpx;
}

.location_option {
  display: flex;
  flex-wrap: wrap; /* 设置弹性盒子在需要时换行 */
  justify-content: space-between; /* 两张图片之间的间距均匀分布 */
}

.location_view {
  width: calc(50% - 5px); /* 计算图片宽度，使得每行两张图片，考虑到两张图片之间的间距 */
  height: 550rpx;
  margin-bottom: 10rpx; /* 设置图片之间的垂直间距 */
}

.location_image {
  width: 100%;
  height: 100%;
