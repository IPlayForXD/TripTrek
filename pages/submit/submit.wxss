/* pages/submit/submit.wxss */
.container {
  padding: 16px;
}

input, textarea {
  width: 100%;
  margin-bottom: 16px;
  padding: 8px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

button {
  display: block;
  width: 100%;
  padding: 10px 0;
  margin-bottom: 16px;
  background-color: #4CAF50;
  color: white;
  text-align: center;
  border: none;
  border-radius: 4px;
  font-size: 16px;
}

button:last-child {
  margin-bottom: 0;
}

.location {
  margin-bottom: 16px;
}

.location label {
  display: block;
  font-size: 16px;
  margin-bottom: 8px;
}

image {
  width: 100%;
  height: auto;
  margin-bottom: 16px;
}
