/* pages/admin/admin.wxss */

page {
  background-color: rgb(246, 246, 246);
}

/* 登录部分，别乱动 */
.login {
  background-image: url('https://636c-cloud1-4gbcbb614f3e02c0-1324715525.tcb.qcloud.la/admin/mario-scheibl-ggiQ0e3lkWc-unsplash.jpg?sign=bec9bacbcbcd90d3287dbbc1286acdac&t=1715406819'); /* 添加背景图片 */
  background-size: cover; /* 背景图片铺满整个登录部分 */
  background-position: center; /* 背景图片居中 */
  background-color: rgba(255, 255, 255, 0.8); /* 添加透明度，确保文字能够清晰显示 */
  height: 400rpx;
  display: flex;
  flex-direction: column; /* 修改为纵向排列 */
  align-items: center; /* 水平居中 */
  justify-content: center; /* 垂直居中 */
  margin-bottom: 30rpx;
}

.block_login {
  height: 150rpx; /* 调整登录按钮高度 */
  width: 150rpx; /* 设置登录按钮宽度 */
  background-color: transparent;
  border-radius: 50%; /* 将登录按钮设置为圆形 */
  display: flex;
  justify-content: center;
  align-items: center;
}

.face_out {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%; /* 将头像设置为圆形 */
}

.name_out {
  padding: 10rpx; /* 调整名称下方的间距 */
  text-align: center; /* 文字居中 */
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%; /* 将用户头像设置为圆形 */
}
.b {
  background-color: transparent;
}


/* 功能部分，别乱动 */
.function {
  background-color: white;
  display: flex;
  flex-direction: row; /* 将子元素水平排列 */
  justify-content: center; /* 子元素水平居中 */
  border-radius: 10px; /* 添加圆角 */
}
.button {
  background-color: transparent;
}
.function_1,
.function_2,
.function_3 {
  width: 33.33%; /* 每个栏目占据三分之一的宽度 */
  text-align: center; /* 文本水平居中 */
}
.like_text,
.favorite_text,
.dynamic_text {
  font-size: 20px; /* 设置字体大小 */
}
.location_option {
  display: flex;
  flex-wrap: wrap; /* 设置弹性盒子在需要时换行 */
  justify-content: space-between; /* 两张图片之间的间距均匀分布 */
}


.location_view {
  width: calc(50% - 5px);
  height: 550rpx;
  margin-bottom: 10rpx;
}
.content {
  background-color: white;
}

.location_image {
  width: 100%;
  height: 100%;
}
